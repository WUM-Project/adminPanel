@model Admin_Panel.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mt-5">
                <h1>Edit</h1>
                <h4 class="mt-3">Mark</h4>
                <hr />

                <form asp-action="Edit" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label for="Title" class="form-label">Title</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Color" class="form-label">Color</label>
                        <input type="color" asp-for="Color" id="colorInput" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="mb-3" hidden> <!-- Hiding the OriginId field -->
                        <label for="Position" class="form-label">Position</label>
                        <input type="text" asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="mb-3" hidden> <!-- Hiding the OriginId field -->
                        <label for="OriginId" class="form-label">OriginId</label>
                        <input type="text" asp-for="OriginId" class="form-control" />
                        <span asp-validation-for="OriginId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Type" class="form-label">Type</label>
                        <input type="text" asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="1">Deleted</option>
                            <option value="2">Active</option>
                            <option value="3">Waiting</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const colorInput = document.getElementById('colorInput');
    colorInput.setAttribute('value', colorInput.getAttribute('value').replace(/\s/g, ''));
    colorInput.addEventListener('change', (event) => {
        const selectedColor = event.target.value;
        console.log(selectedColor);
        const formattedColor = '#' + selectedColor.substr(1); // Remove the '#' symbol
        colorInput.value = formattedColor
        console.log(formattedColor)
    });


</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
