@model  Admin_Panel.ViewModels.CategoryEditViewModels
@* @model Admin_Panel.Models.Category *@

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="text-center mt-5">
                <h1>Edit</h1>
                <h4 class="mt-3">Category</h4>
                <hr />

                <form enctype="multipart/form-data" asp-action="Edit" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                          <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageId.ToString())){      
                        <img class="image-cell" src="@Model.UploadedFiles.FilePath" style="width: 250px; height: 200px;" />
                         }
                         <input asp-for="Photo" type="file" id="uploadFile" name="Photo" class="form-control"/>
                       
      
            
                        <input type="hidden"  asp-for="ImageId" />
                        <span asp-validation-for="ImageId" class="text-danger"></span>
                    </div>
                          <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.IconId.ToString())){      
                        <img class="image-cell" src="@Model.UploadedFileIcon.FilePath" style="width: 250px; height: 200px;" />
                         }
                         <input asp-for="PhotoIcon" type="file" id="uploadFile" name="PhotoIcon" class="form-control"/>
                       
      
            
                        <input type="hidden"  asp-for="IconId" />
                        <span asp-validation-for="IconId" class="text-danger"></span>
                    </div>
                     
                    <div class="mb-3">
                        <label for="Title" class="form-label">Title</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3" hidden> <!-- Hiding the OriginId field -->
        <label for="OriginId" class="form-label">OriginId</label>
        <input type="text" asp-for="OriginId" class="form-control" />
        <span asp-validation-for="OriginId" class="text-danger"></span>
    </div>
                           <div class="mb-3" hidden> <!-- Hiding the OriginId field -->
        <label for="Position" class="form-label">Position</label>
        <input type="text" asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
                 </div>
                    <div class="mb-3">
                        <label for="ParentId" class="form-label">ParentId</label>
                        <input type="text" asp-for="ParentId" class="form-control" />
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="1">Deleted</option>
                            <option value="2">Active</option>
                            <option value="3">Waiting</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                   
                    

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
